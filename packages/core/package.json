{
	"name": "@stepperize/core",
	"version": "0.0.1",
	"private": false,
	"sideEffects": false,
	"files": ["dist"],
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"lint": "turbo lint",
		"clean": "rm -rf .turbo && rm -rf node_modules dist"
	},
	"devDependencies": {
		"tsup": "^8.3.5",
		"typescript": "^5.7.2"
	}
}
