{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"ignore": ["./.turbo", "./.next", "./.changeset", "./.pnpm-store", "./packages/react/dist"]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useKeyWithClickEvents": "off"
			},
			"nursery": {
				"useSortedClasses": "off"
			},
			"style": {
				"useBlockStatements": "error"
			},
			"suspicious": {
				"noConsoleLog": "error",
				"noExplicitAny": "off",
				"noArrayIndexKey": "off"
			},
			"correctness": {
				"noUnusedVariables": "error",
				"noUnusedImports": "error",
				"useExhaustiveDependencies": "off"
			}
		}
	}
}
