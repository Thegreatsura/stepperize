{
	"name": "@stepperize/vue",
	"version": "1.0.0",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"sideEffects": false,
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"lint": "turbo lint",
		"prepublishOnly": "pnpm run build",
		"clean": "rm -rf .turbo && rm -rf node_modules dist"
	},
	"dependencies": {
		"@stepperize/core": "workspace:*"
	},
	"peerDependencies": {
		"vue": ">=3.3.0"
	},
	"devDependencies": {
		"tsup": "^8.3.5",
		"typescript": "^5.7.2"
	}
}
